{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "lerna run --parallel dev",
    "app:start": "lerna run --scope @weknow-network/wk-lib-consumer-playground start",
    "build": "lerna run --stream --parallel build",
    "build-sync": "lerna run build",
    "lint": "lerna run --stream --parallel lint",
    "test": "lerna run --stream --parallel test",
    "storybook": "lerna run --stream --parallel storybook",
    "build-storybook": "lerna run --parallel build-storybook",
    "lib:build": "lerna run --stream --scope @weknow-network/wk-lib-playground build",
    "app:build": "lerna run --stream --scope @weknow-network/wk-lib-consumer-playground build"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
